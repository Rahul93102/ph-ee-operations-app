<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet author="fineract" id="3-postgresql" context="postgresql">
        <insert tableName="m_permission">
            <column name="grouping" value="transaction"/>
            <column name="code" value="READ_TRANSACTION"/>
            <column name="entity_name" value="TRANSACTION"/>
            <column name="action_name" value="READ"/>
            <column name="can_maker_checker" valueBoolean="false"/>
        </insert>
        <insert tableName="m_permission">
            <column name="grouping" value="transaction"/>
            <column name="code" value="READ_TRANSACTIONDETAILS"/>
            <column name="entity_name" value="TRANSACTIONDETAILS"/>
            <column name="action_name" value="READ"/>
            <column name="can_maker_checker" valueBoolean="false"/>
        </insert>
        <insert tableName="m_permission">
            <column name="grouping" value="recall"/>
            <column name="code" value="READ_RECALL"/>
            <column name="entity_name" value="RECALL"/>
            <column name="action_name" value="READ"/>
            <column name="can_maker_checker" valueBoolean="false"/>
        </insert>
        <insert tableName="m_permission">
            <column name="grouping" value="request_to_pay"/>
            <column name="code" value="READ_REQUESTTOPAY"/>
            <column name="entity_name" value="REQUESTTOPAY"/>
            <column name="action_name" value="READ"/>
            <column name="can_maker_checker" valueBoolean="false"/>
        </insert>
        <sql>
            SELECT SETVAL('m_permission_id_seq', COALESCE(MAX(id), 0)+1, false ) FROM m_permission;
        </sql>
    </changeSet>
</databaseChangeLog>
